#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "tastytrade"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# Welcome message
puts "Loading Tastytrade #{Tastytrade::VERSION} development console..."
puts "Available: Tastytrade module and all its classes"
puts ""

# Convenience methods for development
def reload!
  files = $LOADED_FEATURES.select { |f| f.include?("/tastytrade/") }
  files.each { |f| load f }
  true
end

# Load any development helpers
dev_helper = File.join(__dir__, "..", "spec", "spec_helper.rb")
require dev_helper if File.exist?(dev_helper)

require "irb"
IRB.start(__FILE__)
